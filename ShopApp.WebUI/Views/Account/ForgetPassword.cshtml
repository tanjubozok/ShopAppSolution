@model ForgetPasswordModel

@{
    ViewData["Title"] = "Forget Password";
}

@section Scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Forget Password</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-controller="Account" asp-action="ForgetPassword" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="EmailAddress" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="EmailAddress" value="@Model.EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Forget Password</button>
                </div>
            </div>

        </form>

    </div>
</div>