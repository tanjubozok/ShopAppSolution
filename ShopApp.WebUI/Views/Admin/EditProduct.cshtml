@model ProductModel

@{
    ViewData["Title"] = "Edit Product";
}
<form asp-controller="Admin" asp-action="EditProduct" method="post">

    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-from-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-from-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-from-label"></label>
                <div class="col-md-10">
                    <textarea type="text" asp-for="Description" class="form-control">@Model.Description</textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-from-label"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="Price" value="@Model.Price" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-success">Save Product</button>
                </div>
            </div>

        </div>

        <div class="col-md-4">
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox"
                           class="custom-control-input"
                           name="categoryIds"
                           value="@item.Id"
                           id="category@(item.Id)"
                           @(Model.SelectCategories.Any(x => x.Id == item.Id) ? "checked" : "")>
                    <label class="custom-control-label" for="category@(item.Id)">@item.Name</label>
                </div>
            }
        </div>
    </div>
</form>